	}
	for (int i = 0; i < N; i++) {
		cout << A[N] << " ";
	}
	cout << endl;
	int pos=0;
	double T;
	for (int i = 0; i < A_SIZE; i++) {
		position = i + rand() % (N - i);
		temp = A[i];
		a[i] = a[pos];
		a[pos] = T;
