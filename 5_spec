		for (int i = A_SIZE - 1; i > 0; i--) {
			T=A[i];
			A[i] = a[i - 1];
			A[i - 1] = T;
		}
	}

	for (int i = 0; i < m; i++) {
		cout << A[i] << " ";
	}
