		cout << A[i] << " ";
	}
	cout << endl;
	double temp;
	for (int m = 0; m < k; m++) {
		for (int i = 0; i < N - 1; i++) {
			T = A[i];
			A[i] = A[i + 1];
			A[i + 1] = T;
		}
